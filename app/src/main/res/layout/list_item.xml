<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/list_item_more"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/list_item_image_view"
            android:background="@color/colorGray"
            android:layout_margin="4dp"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/list_item_title_text_view"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/title_mock_text"
            android:layout_toRightOf="@+id/list_item_image_view"
            android:layout_toLeftOf="@+id/list_item_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/list_item_description_text_view"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:text="@string/description_mock_text"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_toRightOf="@id/list_item_image_view"
            android:layout_below="@+id/list_item_title_text_view"
            android:layout_height="wrap_content" />
        <View android:id="@+id/list_item_horizontal_separator"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/list_item_description_text_view"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/list_item_horizontal_separator"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout style="@style/RecordLinearLayout">

            <ImageView
                style="@style/WrapContentHW"
                android:src="@drawable/ic_weight" />
            <TextView
                style="@style/WrapContentHW"
                android:text="30kg" />

        </LinearLayout>

        <LinearLayout style="@style/RecordLinearLayout">

            <ImageView
                style="@style/WrapContentHW"
                android:src="@drawable/ic_counter" />
            <TextView
                style="@style/WrapContentHW"
                android:text="25 times" />

        </LinearLayout>

        <LinearLayout style="@style/RecordLinearLayout">
            <ImageView
                style="@style/WrapContentHW"
                android:src="@drawable/ic_calendar" />
            <TextView
                style="@style/WrapContentHW"
                android:text="12.12.2012" />
        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>